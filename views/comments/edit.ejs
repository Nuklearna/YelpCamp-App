<% include ../partials/header %>
    <div class="content">
        <div class="content-inside">
            <div style=" margin: 20px auto;" class="container">
                <div class="h1" style="text-align: center;">Edit Comment</div>
                <div style="width: 30%; margin: 25px auto;">
                    <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%>">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-dark btn-block" >Submit</button>
                        </div>
                    </form>
                    <a href="/campgrounds">Go Back!</a>
                </div>
            </div>
        </div>
    </div>
<% include ../partials/footer %>