<% include ../partials/header %>
    <div class="content">
        <div class="content-inside">
            <div style=" margin: 20px auto;" class="container">
                <div class="h1" style="text-align: center;">Edit Profile</div>
                <div style="width: 30%; margin: 25px auto;">
                    <form action="/users/<%=user._id%>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label for="aboutMe">About me</label>
                            
                            <textarea class="form-control" name="user[aboutMe]"><%= user.aboutMe%></textarea>
                        </div>
                        <div class="form-group">
                            <label for="avatar">Avatar</label>
                            <input class="form-control" type="text" name="user[avatar]" value="<%= user.avatar%>">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-dark btn-block" >Submit</button>
                        </div>
                    </form>
                    <a href="/users/<%=user._id %>">Go Back!</a>
                </div>
            </div>
        </div>
    </div>
<% include ../partials/footer %>